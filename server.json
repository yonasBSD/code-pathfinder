{
  "$schema": "https://static.modelcontextprotocol.io/schemas/2025-12-11/server.schema.json",
  "name": "dev.codepathfinder/pathfinder",
  "title": "Code Pathfinder",
  "description": "Code intelligence MCP server: call graphs, type inference, and symbol search for Python/Go.",
  "repository": {
    "url": "https://github.com/shivasurya/code-pathfinder",
    "source": "github"
  },
  "version": "1.3.7",
  "packages": [
    {
      "registryType": "pypi",
      "identifier": "codepathfinder",
      "version": "1.3.7",
      "transport": {
        "type": "stdio"
      },
      "packageArguments": [
        {
          "type": "positional",
          "value": "serve",
          "description": "Start the MCP server",
          "isRequired": true
        },
        {
          "type": "named",
          "name": "--project",
          "description": "Project root to index (defaults to current directory)",
          "isRequired": false,
          "default": ".",
          "format": "filepath"
        }
      ]
    },
    {
      "registryType": "oci",
      "identifier": "docker.io/shivasurya/code-pathfinder:v1.3.7",
      "transport": {
        "type": "stdio"
      }
    }
  ]
}
